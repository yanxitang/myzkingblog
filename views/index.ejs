
<% include include/header.ejs%>

    <h1>最新博客</h1>
    <div class ="container">
         <ul class="media-list">
             <%
             articles.forEach(function (a) {

            %>
              <li class="media">
                  <div class="media-left">
                      <img class ="media-object" src="<%=a.user.avatar%>" alt="">
                  </div>
                  <div class="media-body">
                      <h4 class="media-heading"><a href="/articles/detail/<%=a._id%>"><%=a.title%></a></h4>
                      <p class="media-left"><%-a.content%></p>
                 </div>

                  <div class="media-bottom">
                      作者:<%=a.user.username%>
                      发表时间:<%=a.createTime.toLocaleString()%>
                  </div>

              </li>

             <%
                });
             %>
         </ul>
    </div>

<nav>
    <ul class="pagination">
        <%
            //求出总页数
            var total = Math.ceil(count/pageSize)
        for(var i=1;i<=total;i++){
        %>
        <li><a href="/articles/list/<%=i%>/<%=pageSize%>"><%=i%></a></li>
        <%
        }
        %>
    </ul>
</nav>

<% include include/footer.ejs%>
